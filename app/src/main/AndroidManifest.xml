<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidvip.bookshelf">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RegistrarActivity"
            android:label="@string/registrarse"
            android:parentActivityName=".activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.LoginActivity" />
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_main" />
        </activity>
        <activity
            android:name=".activity.PesquisarActivity"
            android:label="@string/pesquisar"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_pesquisar" />
        </activity>
        <activity
            android:name=".activity.BookDetailsActivity"
            android:label="@string/detalhes"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" />
        <activity
            android:name=".activity.CommentActivity"
            android:label="@string/comentarios"
            android:parentActivityName=".activity.BookDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.androidvip.bookshelf.activity.BookDetailsActivity" />
        </activity>
        <activity
            android:name=".activity.CommentDetailsActivity"
            android:label="@string/comment"
            android:parentActivityName=".activity.CommentActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.androidvip.bookshelf.activity.CommentActivity" />
        </activity>
        <activity
            android:name=".activity.SobreActivity"
            android:label="@string/sobre"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.androidvip.bookshelf.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.ManualAddActivity"
            android:label=" "
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>