<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.androidvip.bookshelf.activity.DetalhesActivity"
    tools:showIn="@layout/activity_detalhes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margem_padrao"
            android:paddingRight="@dimen/margem_padrao"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="#efebe9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhes_tag_layout"
                android:gravity="center_vertical">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/detalhes_tag_edit"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Tags"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detalhes_tag_botao"
                    android:src="@drawable/ic_check"
                    android:tint="#707070"
                    android:layout_gravity="end"
                    android:padding="8dp"
                    style="@style/SelectableItemBackgroundBorderless"/>

            </LinearLayout>

            <ImageView
                android:layout_width="113dp"
                android:layout_height="151dp"
                android:id="@+id/detalhes_capa"
                android:src="@drawable/carregando_imagem"
                android:layout_marginTop="12dp"
                android:layout_below="@id/detalhes_tag_layout"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/detalhes_capa"
                android:layout_below="@id/detalhes_tag_layout"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detalhes_estado"
                    android:textColor="#ffab40"
                    android:background="@drawable/botao_detalhes_selector"
                    android:layout_marginBottom="8dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@string/carregando" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detalhes_nota"
                    android:textColor="#ffab40"
                    android:background="@drawable/botao_detalhes_selector"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@string/carregando" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:id="@+id/detalhes_favorito"
                    android:src="@drawable/ic_favorito"
                    android:visibility="visible"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="end"
                    android:padding="10dp"
                    style="@style/SelectableItemBackgroundBorderless" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margem_padrao"
            android:paddingRight="@dimen/margem_padrao"
            android:paddingTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/detalhes_titulo"
                android:text="@string/carregando"
                android:textSize="20sp"
                android:paddingBottom="9dp"

                android:textAppearance="?android:attr/textAppearanceLarge"
                android:maxLines="2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhes_autores"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingBottom="12dp"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhes_publicacao"
                android:gravity="center"
                android:text="@string/carregando"
                android:padding="12dp"
                android:background="#eeeeee"
                android:textColor="#212121"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/descricao"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhes_descricao"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:textIsSelectable="true"
                android:text="@string/carregando"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/categorias"
                android:layout_marginTop="12dp"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhes_categorias"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:text="@string/carregando"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/classificacoes"
                android:layout_marginTop="12dp"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhes_classificacoes"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:text="@string/carregando"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhes_layout_mais_detalhes"
                android:visibility="gone"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ccc"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/registros"
                    android:textColor="@color/colorAccent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detalhes_inicio_leitura"
                    android:layout_marginTop="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textColor="#212121"
                    android:text="@string/inicio_leitura"
                    android:drawableEnd="@drawable/ic_editar"
                    style="@style/SelectableItemBackground"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detalhes_fim_leitura"
                    android:layout_marginTop="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textColor="#212121"
                    android:text="@string/termino_leitura"
                    android:drawableEnd="@drawable/ic_editar"
                    style="@style/SelectableItemBackground"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ccc"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/comentarios"
                    android:textColor="#212121"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:onClick="comentarios"
                    style="@style/SelectableItemBackground"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
