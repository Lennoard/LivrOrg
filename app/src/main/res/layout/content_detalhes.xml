<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detalhes_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidvip.bookshelf.activity.DetalhesActivity"
    tools:showIn="@layout/activity_detalhes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margem_detalhes"
            android:paddingRight="@dimen/margem_detalhes"
            android:paddingTop="16dp"
            android:orientation="vertical">

            <TextSwitcher
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/detalhes_titulo"
                android:textSize="20sp"
                android:paddingBottom="8dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:maxLines="2" />

            <TextSwitcher
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhes_autores"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:paddingBottom="14dp"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhes_publicacao"
                android:gravity="center"
                android:text="@string/carregando"
                android:padding="12dp"
                android:background="#eeeeee"
                android:textColor="#212121"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/descricao"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhes_descricao"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:textIsSelectable="true"
                android:text="@string/carregando"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/categorias"
                android:layout_marginTop="12dp"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhes_categorias"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:text="@string/carregando"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/classificacoes"
                android:layout_marginTop="12dp"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhes_classificacoes"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:text="@string/carregando"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalhes_layout_mais_detalhes"
                android:visibility="gone"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ccc"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/registros"
                    android:textColor="@color/colorAccent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detalhes_inicio_leitura"
                    android:layout_marginTop="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textColor="#212121"
                    android:text="@string/inicio_leitura"
                    android:drawableEnd="@drawable/ic_editar"
                    style="@style/SelectableItemBackground"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detalhes_fim_leitura"
                    android:layout_marginTop="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textColor="#212121"
                    android:text="@string/termino_leitura"
                    android:drawableEnd="@drawable/ic_editar"
                    style="@style/SelectableItemBackground"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ccc"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="24dp"
                    android:text="@string/comentarios"
                    android:textColor="#212121"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:onClick="comentarios"
                    style="@style/SelectableItemBackground"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
